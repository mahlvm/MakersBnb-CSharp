@model IEnumerable<MakersBnB.Models.Space>

<!DOCTYPE html>
<html>
<head>
    <title>List of Spaces</title>
</head>
<body>
    <h1>List of Spaces</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Bedrooms</th>
                <th>Rules</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var space in Model)
            {
                <tr>
                    <td>@space.Name</td>
                    <td>@space.Description</td>
                    <td>@space.Price</td>
                    <td>@space.Bedrooms</td>
                    <td>@space.Rules</td>
                    <td>
                        @if (!string.IsNullOrEmpty(space.PhotoPath))
                        {
                            <img src="@space.PhotoPath" alt="Photo of @space.Name" style="width: 100px; height: auto;" />
                        }
                    </td>
                    <td>
                        <a href="/Spaces/@space.Id">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a href="/Spaces/New" class="btn btn-primary">Create New Space</a>
    </div>
</body>
</html>

@model MakersBnB.Models.Space

<!DOCTYPE html>
<html>
<head>
    <title>Space Details</title>
</head>
<body>
    <h1>@Model.Name</h1>
    <p>@Model.Description</p>
    <p>Price: @Model.Price</p>
    <p>Bedrooms: @Model.Bedrooms</p>
    <p>Rules: @Model.Rules</p>

    <form method="get" action="/reservations/new">
        <input type="hidden" name="spaceId" value="@Model.Id" />
        <button type="submit">Reserve</button>
    </form>

    
</body>
</html>
